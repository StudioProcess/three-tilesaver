{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "worker": true
    },
    "globals": {
      "THREE": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "off",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": ["warn", "all"],
        "no-empty": "warn",
        "no-console": "off"
    }
}
